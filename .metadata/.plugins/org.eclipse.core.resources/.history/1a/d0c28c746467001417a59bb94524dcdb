
public class SwitchThread extends Thread {
	Monitor mon;
	
	/** Constructor */
	public SwitchThread(Monitor monitor, int prio) {
		mon = monitor;
		setPriority(prio);
	}
	
	
	
	public void run() {
		int mode;
		double[] latestBeamAngles = new double[3];
		double average, sum;
		double epsilon = 0.5;
		
		while(!isInterrupted()) {
			mode = mon.getMode();
			latestBeamAngles = mon.getLatestBeamAngles();
			
			for(int i = 0; i < 3; ++i){
				sum += latestBeamAngles[i];
			}
			average = sum/3;
			
			if(mode == 1 && average > epsilon) {
				
			}
		}
	}
}
