import javax.swing.SwingUtilities;


public class Main {
	public static void main(String args[]){
		
		final int plotterPriority = 7; 
		
		final Opcom opcom = new Opcom(plotterPriority);
		Monitor mon = new Monitor();
		RegulThread regThread= new RegulThread(mon);
		SwitchThread switchThread = new SwitchThread(mon);
		
		
		
		
		
		/** By doing this initializeGUI() is done in the event-dispatcher thread
		 *  see "Swing Thread Safety" in Exercise 4 */
		Runnable initializeGUI = new Runnable(){
			public void run(){
			    opcom.initializeGUI();
			    opcom.start();
			}
		};
		try{
		    SwingUtilities.invokeAndWait(initializeGUI);
		}catch(Exception e){
		    return;
		}

		
	}

	
}
